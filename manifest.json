{
  "name": "Christmasify",
  "version": "1.0",
  "description": "Make web pages more Christmassy",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["main.css"]
    }
  ],
  "browser_action": {
    "default_icon": "images/icon-disabled.png",
    "default_title": "Christmasify the web"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
